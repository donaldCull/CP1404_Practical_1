BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            font_size: 48
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                id: increment_up
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                id: increment_down
                text: 'Down'
                on_press: app.handle_increment(-1)
