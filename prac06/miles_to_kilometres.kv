BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            font_size: 48
        BoxLayout:
            orientation: 'vertical'
            Button:
                id: increment_up
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                id: increment_down
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert m to km'
        on_press: app.handle_calculate(int(input_number.text))


    Label:
        id: output_number
        font_size: 48